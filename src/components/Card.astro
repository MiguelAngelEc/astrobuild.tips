---
export interface Props {
	title: string
	time: string
	tags: string
}

const { title, time, tags } = Astro.props
---

<article style="border-radius: 10px; border: 1px solid #e5e7eb; background-color: white; padding: 0 1rem 1rem 1rem; padding-top: 3rem;">
	<time datetime="2022-10-10" style="display: block; font-size: 0.75rem; color: #6b7280;"> {time}</time>

	<a href="#">
		<h3 style="margin-top: 0.125rem; font-size: 1.125rem; font-weight: 500; color: #111827;">
			{title}
		</h3>
	</a>

	<div style="margin-top: 1rem; display: flex; flex-wrap: wrap; gap: 0.25rem;">
		<span
			style="border-radius: 9999px; background-color: #ede9fe; padding: 0.125rem 0.625rem; font-size: 0.75rem; white-space: nowrap; color: #7c3aed;"
		>
			{tags}
		</span>
	</div>
</article>
